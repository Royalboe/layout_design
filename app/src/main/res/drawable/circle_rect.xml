<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval"
            >
            <solid
                android:color="@color/white"/>
<!--            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />-->
            <size
                android:width="50dp"
                android:height="50dp" />
            <stroke
                android:width="1dp"
                android:color="@color/background_gradient" />
        </shape>
    </item>
    <item  android:height="30dp" android:width="30dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/background"/>
            <solid android:color="@color/background_gradient"/>
            <size android:width="3dp"
                android:height="3dp"/>
        </shape>
    </item>
</layer-list>